{
  "name": "ulti-coin",
  "private": true,
  "version": "0.1.0",
  "homepage": "https://ultiarena.com",
  "main": "index.js",
  "license": "GPLv3",
  "scripts": {
    "compile": "hardhat compile",
    "clean": "hardhat clean",
    "coverage": "hardhat coverage",
    "test": "hardhat test",
    "deploy-testnet": "hardhat run --network bsc_testnet",
    "deploy-kovan": "hardhat run --network kovan",
    "deploy-mainnet": "hardhat run --network bsc",
    "bytecode": "hardhat run --network bsc_testnet",
    "verify-kovan": "hardhat verify --network kovan",
    "verify-testnet": "hardhat verify --network bsc_testnet",
    "verify-mainnet": "hardhat verify --network bsc",
    "format": "prettier --write \"**/*.ts\" \"contracts/**/*.sol\"",
    "lint": "solhint \"contracts/**/*.sol\"",
    "typecheck": "yarn compile && yarn test && yarn tsc --noEmit"
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.1.0"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^7.0.0",
    "@typechain/hardhat": "^2.0.1",
    "@types/chai": "^4.2.18",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.6.0",
    "chai": "^4.3.4",
    "decimal.js": "^10.2.1",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.2.0",
    "hardhat": "^2.3.0",
    "hardhat-typechain": "^0.3.5",
    "mocha": "^8.4.0",
    "prettier": "^2.3.0",
    "prettier-plugin-solidity": "^1.0.0-beta.10",
    "solhint": "^3.3.5",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.16",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.1.1",
    "typechain": "^5.0.0",
    "typescript": "4.1.5"
  }
}
